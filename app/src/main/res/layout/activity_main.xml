<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_ac"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#595A5D"
                    android:text="AC"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_open_bracket"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#595A5D"
                    android:text="("
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_close_bracket"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#595A5D"
                    android:text=")"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_devide"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#FB9D08"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_7"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_8"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_9"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_multiply"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#FB9D08"
                    android:text="*"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_4"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_5"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_6"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_subtract"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#FB9D08"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_1"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_2"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_3"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#FB9D08"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_C"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#3C3E3E"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_0"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_dot"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#272929"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_equals"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="#FB9D08"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/solution"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/button_layout"
            android:layout_marginBottom="13dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_above="@+id/solution"
            android:layout_marginBottom="16dp"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#7B7D7D"
            android:textSize="48sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>